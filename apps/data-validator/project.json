{
  "name": "data-validator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/data-validator/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/data-validator",
        "format": ["esm"],
        "bundle": true,
        "thirdParty": true,
        "main": "apps/data-validator/src/main.ts",
        "tsConfig": "apps/data-validator/tsconfig.app.json",
        "assets": [
          {
            "glob": "{tech,software,domain-response}.json",
            "input": "libs/shared/assets/src/utils",
            "output": ""
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "data-validator:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "data-validator:build:development"
        },
        "production": {
          "buildTarget": "data-validator:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/data-validator/jest.config.ts"
      }
    }
  },
  "tags": []
}

{
  "name": "web-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/web-client/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/web-client",
        "index": "apps/web-client/src/index.html",
        "browser": "apps/web-client/src/main.ts",
        "server": "apps/web-client/src/main.server.ts",
        "ssr": {
          "entry": "apps/web-client/src/server.ts"
        },
        "polyfills": ["@lottiefiles/lottie-player"],
        "tsConfig": "apps/web-client/tsconfig.app.json",
        "webWorkerTsConfig": "apps/web-client/tsconfig.worker.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "libs/shared/assets/src",
            "output": "./assets"
          },
          {
            "glob": "**/*.min.css",
            "input": "node_modules/swiper",
            "ignore": ["**/*-element.min.css", "**/*-bundle.min.css"],
            "output": "assets/swiper"
          },
          "apps/web-client/src/assets"
        ],
        "styles": [
          "libs/shared/styles/src/fonts.css",
          "libs/shared/styles/src/material.scss",
          "apps/web-client/src/styles.less"
        ],
        "scripts": [],
        "statsJson": true,
        "plugins": [
          {
            "path": "tools/custom-nx/src/executors/ng-sw/service-worker.plugin.ts",
            "options": {
              "src": "apps/web-client/src/service-worker/sw.worker.ts",
              "destination": "eastalents-web-client.sw",
              "tsconfig": "apps/web-client/tsconfig.worker.json"
            }
          },
          {
            "path": "tools/esbuild/inject-tw-theme.plugin.ts",
            "options": {
              "configPath": "apps/web-client/tailwind.config.js"
            }
          }
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "16kb",
              "maximumError": "1Mb"
            }
          ],
          "outputHashing": "all",
          "namedChunks": true,
          "optimization": {
            "scripts": true,
            "styles": true,
            "fonts": false
          }
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "build-service-worker": {
      "executor": "custom-nx:ng-sw",
      "options": {
        "buildTarget": "web-client:build"
      },
      "dependsOn": ["build"]
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "liveReload": false,
        "hmr": false
      },
      "configurations": {
        "production": {
          "buildTarget": "web-client:build:production"
        },
        "development": {
          "buildTarget": "web-client:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "build-tw": {
      "command": "tailwind -o apps/web-client/src/assets/tw.css --config apps/web-client/tailwind.config.js --minify --content ' '"
    },
    "analyze": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build web-client --statsJson"],
        "parallel": false
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "web-client:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web-client/jest.config.ts",
        "webWorkerTsConfig": "apps/web-client/tsconfig.worker.json"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "staticFilePath": "dist/apps/web-client/browser",
        "spa": true,
        "buildTarget": "web-client:build"
      }
    },
    "prep-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build web-client",
          "nx build-service-worker web-client",
          "mkdir -p dist/docker/web-client",
          "tar -czf dist/docker/web-client/dist.tar.gz -C dist/apps web-client",
          "cp apps/web-client/docker/dockerfile dist/docker/web-client",
          "cp apps/web-client/docker/compose.extend.yml dist/docker/web-client"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "args": ["--remote=root@216.225.201.134"],
        "commands": [],
        "forwardAllArgs": false,
        "parallel": false
      },
      "configurations": {
        "local": {
          "commands": [
            "cp apps/web-client/docker/compose.development.yml dist/docker/web-client/compose.yml",
            "cd dist/docker/web-client && docker compose up -d --build"
          ],
          "env": {
            "PORT": "5101"
          }
        },
        "production": {
          "commands": [
            "cp apps/web-client/docker/compose.production.yml dist/docker/web-client/compose.yml",
            "scp -r dist/docker/web-client {args.remote}:~/production",
            "ssh {args.remote} 'cd ~/production/web-client && docker compose up -d --build'"
          ]
        },
        "development": {
          "commands": [
            "cp apps/web-client/docker/compose.development.yml dist/docker/web-client/compose.yml",
            "scp -r dist/docker/web-client {args.remote}:~/development",
            "ssh {args.remote} 'cd ~/development/web-client && docker compose up -d --build'"
          ]
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["prep-deploy"]
    }
  }
}

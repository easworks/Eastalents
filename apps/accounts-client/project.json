{
  "name": "accounts-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/accounts-client/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/accounts-client",
        "index": "apps/accounts-client/src/index.html",
        "browser": "apps/accounts-client/src/main.ts",
        "server": "apps/accounts-client/src/main.server.ts",
        "ssr": {
          "entry": "apps/accounts-client/src/server.ts"
        },
        "polyfills": [],
        "tsConfig": "apps/accounts-client/tsconfig.app.json",
        "inlineStyleLanguage": "less",
        "assets": [
          {
            "glob": "!(software)/**/*",
            "input": "libs/shared/assets/src",
            "output": "./assets"
          },
          "apps/accounts-client/src/assets"
        ],
        "styles": [
          "libs/shared/styles/src/fonts.css",
          "libs/shared/styles/src/material.scss",
          "apps/accounts-client/src/styles.less"
        ],
        "scripts": [],
        "statsJson": true,
        "plugins": [
          {
            "path": "tools/esbuild/inject-tw-theme.plugin.ts",
            "options": {
              "configPath": "apps/accounts-client/tailwind.config.js"
            }
          }
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "liveReload": false,
        "hmr": true,
        "port": 4103,
        "proxyConfig": "apps/accounts-client/proxy.config.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "accounts-client:build:production"
        },
        "development": {
          "buildTarget": "accounts-client:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "accounts-client:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/accounts-client/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "accounts-client:build",
        "port": 4103,
        "staticFilePath": "dist/apps/accounts-client/browser",
        "spa": true
      }
    }
  }
}

{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/api",
        "format": ["esm"],
        "bundle": true,
        "thirdParty": false,
        "main": "apps/api/src/server.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/api/src/assets",
            "output": "assets"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    },
    "prep-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd dist/apps/api && pnpm i --lockfile-only",
          "rm -rf dist/docker/api",
          "mkdir -p dist/docker/api",
          "cp apps/api/docker/dockerfile dist/docker/api",
          "cp apps/api/docker/compose.extend.yml dist/docker/api"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "args": ["--remote=root@216.225.201.134"],
        "commands": [],
        "forwardAllArgs": false,
        "parallel": false
      },
      "configurations": {
        "local": {
          "commands": [
            "cp apps/api/docker/compose.development.yml dist/docker/api/compose.yml",
            "mv -f dist/apps/api dist/docker/api/dist",
            "cd dist/docker/api && docker compose up -d --build"
          ]
        },
        "development": {
          "commands": [
            "cp apps/api/docker/compose.development.yml dist/docker/api/compose.yml",
            "rsync -vchr --delete dist/apps/api/ {args.remote}:~/development/api/dist",
            "rsync -vchr dist/docker/api/ {args.remote}:~/development/api",
            "ssh {args.remote} 'cd ~/development/api && docker compose up -d --build'"
          ]
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["prep-deploy"]
    }
  }
}

{
  "name": "mongodb",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/mongodb/src",
  "prefix": "lib",
  "tags": [],
  "projectType": "library",
  "targets": {
    "mikro": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mikro-orm --config ./src/mikro-orm.config.cli.ts",
        "forwardAllArgs": true,
        "cwd": "libs/mongodb"
      }
    },
    "prep-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/docker/mongodb",
          "mkdir -p dist/docker/mongodb",
          "cp libs/mongodb/docker/dockerfile dist/docker/mongodb",
          "cp libs/mongodb/docker/compose.extend.yml dist/docker/mongodb"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "args": ["--remote=root@216.225.201.134"],
        "commands": [],
        "parallel": false,
        "forwardAllArgs": false
      },
      "configurations": {
        "local": {
          "commands": [
            "cp libs/mongodb/mongodb.key dist/docker/mongodb",
            "cp libs/mongodb/docker/compose.development.yml dist/docker/mongodb/compose.yml",
            "cd dist/docker/mongodb && docker compose up -d --build --force-recreate"
          ]
        },
        "development": {
          "commands": [
            "cp libs/mongodb/docker/compose.development.yml dist/docker/mongodb/compose.yml",
            "rsync -vchr dist/docker/mongodb/ {args.remote}:~/development/mongodb",
            "ssh {args.remote} 'cd ~/development/mongodb && docker compose up -d --build --force-recreate'"
          ]
        },
        "production": {
          "commands": [
            "cp libs/mongodb/docker/compose.production.yml dist/docker/mongodb/compose.yml",
            "rsync -vchr dist/docker/mongodb/ {args.remote}:~/production/mongodb",
            "ssh {args.remote} 'cd ~/production/mongodb && docker compose up -d --build --force-recreate'"
          ]
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["prep-deploy"]
    }
  }
}
